# Production Environment Configuration
# Copy this file to .env and update with your production values

# Database Configuration
MONGO_ROOT_USERNAME=your_mongo_username
MONGO_ROOT_PASSWORD=your_secure_mongo_password
MONGO_DB_NAME=farmer-marketplace

# Backend Configuration
NODE_ENV=production
JWT_SECRET=your-production-jwt-secret-must-be-at-least-32-characters-long-and-secure
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://your-production-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=30
LOG_LEVEL=info
ENABLE_RESPONSE_CACHE=true

# Frontend Configuration
VITE_API_URL=https://api.your-production-domain.com/api
VITE_NODE_ENV=production

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Logging
LOG_RETENTION_DAYS=30
BACKUP_RETENTION_DAYS=7