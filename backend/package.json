{
  "name": "farmer-marketplace-backend",
  "version": "1.0.0",
  "description": "Backend API for Farmer Marketplace Platform",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:prod": "npm run lint && npm run test && tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docs:generate": "ts-node src/scripts/generateApiSpec.ts",
    "docs:serve": "npm run docs:generate && npx http-server docs -p 3001 -o",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "cp package.json dist/ && cp -r node_modules dist/",
    "health": "curl -f http://localhost:5000/health || exit 1",
    "migrate": "ts-node src/scripts/migrations/run-all-migrations.ts",
    "migrate:users": "ts-node src/scripts/migrations/001-add-user-language-preferences.ts",
    "migrate:content": "ts-node src/scripts/migrations/002-migrate-content-to-multilingual.ts",
    "migrate:indexes": "ts-node src/scripts/migrations/003-add-multilingual-indexes.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "optimize-db": "ts-node src/scripts/optimizeDatabase.ts",
    "security-test": "ts-node src/scripts/securityTest.ts"
  },
  "keywords": [
    "farmer",
    "marketplace",
    "api",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "prom-client": "^15.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-dist": "^5.31.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.5.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "fast-check": "^3.12.0",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^10.4.3",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
